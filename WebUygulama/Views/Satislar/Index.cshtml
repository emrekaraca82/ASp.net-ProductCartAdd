@using WebUygulama.Models.Entity
@model List<tbl_satis>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 style="text-align:center;color:darkslategrey">Satıslar Sayfası</h2>
<a href="@Url.Action("ExcelExport","Satislar")" style="margin-bottom:20px;" class="btn btn-warning">Excel Aktar</a>

<table id="tbl1" class=" table table-bordered table-striped">
    <thead>
        <tr>
            <th>Kullanıcı Ad Soyad</th>
            <th>Urun Adi</th>
            <th>Barkod No</th>
            <th>Birim Fiyat</th>
            <th>Adet</th>
            <th>Toplam Tutar</th>
            <th>Kdv</th>
            <th>Tarih</th>
            <th>Sil</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>

            <th>@Html.DisplayFor(x => item.tbl_login.kul_ad)</th>
            <th>@Html.DisplayFor(x => item.tbl_urunler.urun_adi)</th>
            <th>@Html.DisplayFor(x => item.tbl_urunler.urun_barkod)</th>
            <th>@Html.DisplayFor(x => item.birim_fiyat)</th>
            <th>@Html.DisplayFor(x => item.adet)</th>
            <th>@Html.DisplayFor(x => item.toplam_tutar)</th>
            <th>@Html.DisplayFor(x => item.kdv)</th>
            <th>@Html.DisplayFor(x => item.tarih)</th>        
            <td>@Html.ActionLink("Delete", "Sil", new { ID = item.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Emin misin bunun geri dönüşü yok bak siliyorummmm?')" })</td>

        </tr>
    }

</table>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').DataTable();
</script>